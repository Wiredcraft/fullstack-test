{
  "name": "lightning-talks-api",
  "version": "1.0.0",
  "main": "src/app.ts",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@prisma/client": "4.8.0",
    "dotenv": "16.0.3",

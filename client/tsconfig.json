{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "sourceMap": true,
    "incremental": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}

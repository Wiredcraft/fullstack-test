{
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDirs": ["src"],

    "outDir": "./lib",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "preserve",
    "isolatedModules": true
  },

  "jest": {
    "mapCoverage": true
  }
}
